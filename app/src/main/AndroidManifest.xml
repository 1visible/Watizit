<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.watizit" >
    
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".menus.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".menus.MenuOptions"
            android:label="Menu options"
            android:parentActivityName=".menus.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".menus.MainActivity" />
        </activity>

        <activity android:name=".menus.MenuJouer"
            android:label="Menu jouer"
            android:parentActivityName=".menus.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".menus.MainActivity"/>
        </activity>

        <activity android:name=".menus.MenuNiveaux"
            android:label="Menu niveaux"
            android:parentActivityName=".menus.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".menus.MainActivity"/>
        </activity>
        <service
            android:name=".utils.JouerMusique"
            android:enabled="true">
        </service>

        

    </application>

</manifest>