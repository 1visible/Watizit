<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/aide1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/aide2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/aide_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 O - Afficher une lettre"
        app:layout_constraintBottom_toBottomOf="@+id/aide1"
        app:layout_constraintStart_toEndOf="@+id/aide1"
        app:layout_constraintTop_toTopOf="@+id/aide1"
        app:layout_constraintVertical_bias="0.478" />

    <ImageView
        android:id="@+id/aide2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/aide3"
        app:layout_constraintEnd_toEndOf="@+id/aide1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/aide1"
        app:layout_constraintTop_toBottomOf="@+id/aide1"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/aide_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 O - Afficher l'image"
        app:layout_constraintBottom_toBottomOf="@+id/aide2"
        app:layout_constraintStart_toEndOf="@+id/aide2"
        app:layout_constraintTop_toTopOf="@+id/aide2" />

    <ImageView
        android:id="@+id/aide3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/aide2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/aide2"
        app:layout_constraintTop_toBottomOf="@+id/aide2"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/aide_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 O - Trouver le mot"
        app:layout_constraintBottom_toBottomOf="@+id/aide3"
        app:layout_constraintStart_toEndOf="@+id/aide3"
        app:layout_constraintTop_toTopOf="@+id/aide3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choisissez une aide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <Button
        android:id="@+id/close"
        android:layout_width="260px"
        android:layout_height="90px"
        android:onClick="fermer"
        android:text="Fermer"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aide3" />


</androidx.constraintlayout.widget.ConstraintLayout>

